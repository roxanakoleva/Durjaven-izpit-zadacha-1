#include <iostream>

using namespace std;

int main()
{
    float R1, R2, Rp; // Дефинираме променливи от тип за число с плаваща запетая
    cout << "\nPlease enter value of R1"; //Извеждаме на екрана съобщение за въвеждане на първото съпротивление
    cin >> R1; //Даваме на потребителя да въведе стойност на първото съпротивление
    cout << "\nPlease enter value of R2";//Извеждаме на екрана съобщение за въвеждане на второто съпротивление
    cin >> R2;//Даваме на потребителя да въведе стойност на второто съпротивление
    if (R1+R2==0) //Създаваме функцията за да проверим дали сборът на двете съпротивления е равен на 0
    {
        cout << "\nError: Result cannot be calculated"; /* Ако сборът е 0 ще изпечати на екрана съобщение за грешка, защото формулата
                                                            за успоредно свързване дели произведението на R1 и R2 на сборът им и ако 
                                                            той е равен на 0 няма как да се реши задачата*/
    }
    else // Ако е различен от 0 ще се стартира кода, които е между фигурните скоби
    {
        Rp = R1*R2 / (R1+R2); // Тази формула намира стойността на общото съпротивление
        cout<< "\nThe value is "; // Изпринтира се на екрана "Стойността е" 
        cout << Rp; // Изпринтира се стойността на Rp
    }
return 0; //Показваме на компилатора, че задачата приключва
}
